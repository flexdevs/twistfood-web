@model PagenationMetaData

<div class="mt-4">
    <ul class="pagination pagination-outline justify-content-center">
        @{
            if (Model.HasPrevious)
            {
                <li class="page-item previous  m-1">
                    <a asp-controller="products" asp-action="index" asp-route-page="@(Model.CurrentPage-1)" as class="page-link" >
                        <i class="previous" >
                        </i>Back
                    </a>
                </li>

            }
            else
            {
                <li class="page-item previous disabled m-1"><a href="#" class="page-link"><i class="previous"></i>Back</a></li>

            }
            for (int i = 1; i <=Model.TotalPages; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <li class="page-item active m-1"><a asp-controller="products" asp-action="index" asp-route-page="@i" class="page-link">@i</a></li>
                }
                else
                {
                    <li class="page-item  m-1"><a asp-controller="products" asp-action="index" asp-route-page="@i" class="page-link">@i</a></li>
                }

            }
            if (Model.HasNext)
            {
                <li class="page-item next m-1"><a asp-controller="products" asp-action="index" asp-route-page="@(Model.CurrentPage+1)" class="page-link"><i class="next"></i>Next</a></li>
            }
            else
            {
                <li class="page-item disabled next m-1"><a href="#" class="page-link"><i class="next"></i>Next</a></li>
            }
        }
                 
                    
    </ul>
</div>


