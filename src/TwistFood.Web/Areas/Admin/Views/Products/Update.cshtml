@using TwistFood.Service.Dtos.Products;
@model UpdateProductDto

<div class="d-flex justify-content-center" style="margin-top:150px; margin-bottom:20px">

    <div class="card px-4 pt-4 pb-4 pe-4" style="width:500px;">
        <div class="card-body">
            <h3>Update Product</h3>
            <form asp-action="Update" asp-area="admin" asp-controller="products" asp-route-Id="@Model.ProductId" method="post" enctype="multipart/form-data">
                 <div class="mt-3">
                    <label asp-for="ProductId" class="control-label">@Model.ProductId</label>
                   
                </div>
                <div class="mt-3">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <input type="number" asp-for=CategoryId class="form-control">
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="mt-4">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input type="text" asp-for=ProductName class="form-control">
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="mt-4">
                    <label asp-for="ProductDescription" class="control-label"></label>
                    <input type="text" asp-for=ProductDescription class="form-control" >
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>
                <div class="mt-4">
                    <label asp-for="Price" class="control-label"></label>
                    <input type="text" asp-for=Price class="form-control">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mt-4">
                    <label asp-for="Image" class="control-label"></label>
                    <input type="file" asp-for=Image class="forupload">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="mt-4 mb-2 d-flex justify-content-end">
                    <input type="submit" class="btn btn-success me-2" value="Save">
                    <a asp-area="admin" asp-controller="products" asp-action="index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>

        </div>
    </div>

</div>

