@using TwistFood.Service.ViewModels.Accounts;
@model AdminViewModel
<div class="d-flex justify-content-center">
    <div class="card " style="margin-top:150px; max-width:800px">
        <div class="d-flex pt-4 pb-4 px-4 pe-4">
            <div class="row mt-3 mx-1 me-5" style="max-width:500px; max-height:500px">

                <img style="max-width:350px; max-height:350px;" src="~/@Model.ImagePath" />
                <div class="mt-2 text-center">
                        <label  class="control-label">@Model.FirstName</label>
                        <label class="control-label m-2">@Model.LastName</label>

                </div>

            </div>
            <div class="row" >
                <div >
                    <h3 class="text-center">Profile</h3>
                   
                    <div class="mt-4">
                       <h5>Phone Number:</h5>
                       <span class="mx-2">@Model.PhoneNumber</span>

                    </div>
                    <div class="mt-4">
                      <h5>Email:</h5>
                        <span class="mx-2">@Model.Email</span>
                    </div>
                    <div class="mt-4">
                        <h5>Pasport Seria:</h5>
                        <span class="mx-2">@Model.PassportSeriaNumber</span>
                    </div>
                    <div class="mt-4">
                        <h5>Birthdate:</h5>
                        <span class="mx-2">@Model.BirthDate</span>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-5 mb-2">
                   <div>
                        <a class="btn btn-success">
                            Update
                        </a>    
                   </div>
                     <div class="mx-4">
                        <a asp-area="" asp-controller="accounts" asp-action="logout" class="btn btn-danger">
                            LogOut
                        </a>    
                   </div>
                   
                </div>



            </div>
        
        </div>

    </div>
</div>